<!DOCTYPE html>
<html lang="en">
    <%- include('../layout/head.ejs', { pageTitle : 'Thông tin chi tiết' }) %>
<body>
    <div class="container mb-5">
        <%- include('../layout/navbar.ejs') %>
        <div class="card mt-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h1 class="mb-0">Details</h1>
                <a class="btn btn-secondary" onclick="window.history.back();">
                    <i class="fa fa-arrow-left"></i> Back
                </a>
            </div>
            <div class="card-body">
                <form action="#" method="post">
                    
                    <div class="form-group">
                        <label for="name" class="form-label">Name: </label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= data.name %>" required>
                    </div>
                    <div class="d-flex justify-content-between mb-3">
                        <div class="ml-auto">
                            <a href="/roles/<%= data.id %>/edit" class="btn btn-outline-warning btn-sm me-1">
                                <i class="fa-solid fa-pen-to-square"></i> Edit
                            </a>
                            <a href="/roles/<%= data.id %>/delete" class="btn btn-outline-danger btn-sm me-1" onclick="return confirm('Bạn có chắc muốn xóa quyền này?');">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</body>
</html>